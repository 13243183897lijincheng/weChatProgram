.container {
    display: flex;
    flex-direction: column;
}
.head_img {
    width: 100%;
    height: 460rpx;
}
.music {
    position: absolute;
    width: 102rpx;
    height: 110rpx;
    left: 50%;
    top: 180rpx;
    margin-left: -51rpx;
    opacity: 0.6;
}
.author_date {
    display: flex;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.author_date image{
    width: 64rpx;
    height: 64rpx;
}
.author_date text {
    font-size: 30rpx;
    line-height: 64rpx;
    color: #666;
    
}
.author {
    margin-left: 20rpx;
}
.title {
    font-size: 40rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    letter-spacing: 20rpx;
    color: #73767b;
}
.line_img {
    margin-top: 10rpx;
     position: relative;
}
.line_img image {
    float: right;
    margin-right: 25rpx;
    width: 90rpx;
    height: 90rpx;
}
.line {
    position: absolute;
    top:45rpx;
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    z-index: -10;
    margin-left:20rpx;  
}
.content {
    margin-left: 30rpx;
    margin-top: 20rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    letter-spacing: 5rpx;
}